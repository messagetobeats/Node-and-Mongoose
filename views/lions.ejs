<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <p>Lions:</p>

    <% data.forEach(function(item){ %>

      <div class="lions">
          Name: <%= item.name %><br>
          Pride: <%= item.pride %><br>
          Age: <%= item.age %><br>
          Gender: <%= item.gender %><br>
      </div>

    <%  }) %>

    <form class="theform" action="lions" method="post">
      <p>Add new Lion:</p>
        Name: <input type="text" name="name" value=""><br>
        Pride: <input type="text" name="pride" value=""><br>
        Age: <input type="text" name="age" value=""><br>
        Gender: <input type="text" name="gender" value=""><br>
        <input type="submit" name="" value="submit">
    </form>
  </body>
</html>
